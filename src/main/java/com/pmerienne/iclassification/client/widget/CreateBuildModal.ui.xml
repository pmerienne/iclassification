<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:w="urn:import:com.pmerienne.iclassification.client.widget">
	<ui:style>
		
	</ui:style>

	<g:HTMLPanel>
		<b:Form type="HORIZONTAL">
			<g:Label>Feature configuration</g:Label>
			<b:Fieldset>
				<b:ControlGroup>
					<b:ControlLabel>Type</b:ControlLabel>
					<b:Controls>
						<w:FeatureTypeListBox ui:field="type" />
					</b:Controls>
				</b:ControlGroup>

				<b:ControlGroup>
					<b:ControlLabel>Use crop zone</b:ControlLabel>
					<b:Controls>
						<b:CheckBox ui:field="useCropZone"></b:CheckBox>
					</b:Controls>
				</b:ControlGroup>

				<b:ControlGroup>
					<b:ControlLabel>Dictionary size</b:ControlLabel>
					<b:Controls>
						<b:TextBox ui:field="dictionarySize" />
					</b:Controls>
				</b:ControlGroup>
			</b:Fieldset>
		</b:Form>

		<b:ModalFooter>
			<b:Button ui:field="saveButton" icon="OK" type="PRIMARY">Save</b:Button>
		</b:ModalFooter>
	</g:HTMLPanel>
</ui:UiBinder> 